{
  "languages": {
    "java": {
      "keywords": ["public class", "javax.", "jakarta.", "import java."],
      "files": [".java", "pom.xml", "build.gradle", "settings.gradle"],
      "sbomMatch": ["pkg:maven", "pkg:gradle"],
      "match": "contains"
    },
    "python": {
      "keywords": ["def ", "import ", "class "],
      "files": [".py", "pyproject.toml", "Pipfile"],
      "sbomMatch": ["pkg:pypi"],
      "match": "contains"
    },
    "javascript": {
      "keywords": ["function ", "import ", "export ", "require("],
      "files": [".js", "package.json"],
      "sbomMatch": ["pkg:npm"],
      "match": "contains"
    },
    "typescript": {
      "files": [".ts"],
      "sbomMatch": ["pkg:npm"],
      "match": "contains"
    },
    "go": {
      "files": [".go", "go.mod"],
      "sbomMatch": ["pkg:golang"],
      "match": "contains"
    },
    "csharp": {
      "files": [".cs", ".csproj"],
      "sbomMatch": ["pkg:nuget"],
      "match": "contains"
    },
    "ruby": {
      "files": [".rb", "Gemfile"],
      "sbomMatch": ["pkg:gem"],
      "match": "contains"
    },
    "php": {
      "files": [".php", "composer.json"],
      "sbomMatch": ["pkg:composer"],
      "match": "contains"
    },
    "rust": {
      "files": ["Cargo.toml", ".rs"],
      "sbomMatch": ["pkg:cargo"],
      "match": "contains"
    }
  },

  "frameworks": {
    "spring-boot": {
      "keywords": ["@SpringBootApplication", "org.springframework"],
      "sbomMatch": ["org.springframework.boot"],
      "match": "contains"
    },
    "spring-framework": {
      "keywords": ["@SpringBootApplication", "org.springframework"],
      "sbomMatch": ["org.springframework"],
      "match": "exact"
    },
    "micronaut": {
      "keywords": ["io.micronaut"],
      "sbomMatch": ["io.micronaut"],
      "match": "contains"
    },
    "quarkus": {
      "keywords": ["io.quarkus"],
      "sbomMatch": ["io.quarkus"],
      "match": "contains"
    },
    "django": {
      "keywords": ["django"],
      "files": ["manage.py"],
      "sbomMatch": ["django"],
      "match": "contains"
    },
    "flask": {
      "keywords": ["flask"],
      "sbomMatch": ["flask"],
      "match": "contains"
    },
    "fastapi": {
      "keywords": ["fastapi"],
      "sbomMatch": ["fastapi"],
      "match": "contains"
    },
    "node_express": {
      "keywords": ["express()"],
      "sbomMatch": ["express"],
      "match": "exact"
    },
    "react": {
      "files": ["package.json"],
      "keywords": ["react"],
      "sbomMatch": ["react"],
      "match": "exact"
    },
    "angular": {
      "files": ["angular.json"],
      "sbomMatch": ["@angular"],
      "match": "exact"
    },
    "dotnet_aspnet": {
      "files": [".csproj"],
      "sbomMatch": ["microsoft.aspnetcore"],
      "match": "contains"
    },
    "rails": {
      "files": ["Gemfile"],
      "sbomMatch": ["rails"],
      "match": "contains"
    }
  },

  "cloudSdks": {
    "aws": {
      "keywords": ["aws.", "boto3"],
      "sbomMatch": ["aws-java-sdk", "boto3"],
      "match": "contains"
    },
    "azure": {
      "keywords": ["azure"],
      "sbomMatch": ["com.azure"],
      "match": "contains"
    },
    "gcp": {
      "keywords": ["google.cloud"],
      "sbomMatch": ["com.google.cloud"],
      "match": "contains"
    }
  },

  "databases": {
    "mysql": {
      "sbomMatch": ["mysql-connector", "mariadb"],
      "keywords": ["mysql"],
      "match": "contains"
    },
    "postgres": {
      "sbomMatch": ["postgresql", "org.postgresql"],
      "keywords": ["postgres"],
      "match": "contains"
    },
    "mongodb": {
      "sbomMatch": ["mongodb-driver"],
      "keywords": ["mongodb"],
      "match": "contains"
    },
    "redis": {
      "sbomMatch": ["jedis", "redis"],
      "keywords": ["redis"],
      "match": "contains"
    }
  },

  "containers": {
    "docker": {
      "files": ["Dockerfile"],
      "keywords": ["FROM "],
      "match": "contains"
    },
    "oci_image": {
      "sbomMatch": ["oci:"],
      "match": "contains"
    }
  },

  "iac": {
    "terraform": {
      "files": [".tf"],
      "keywords": ["terraform"],
      "match": "contains"
    },
    "cloudformation": {
      "files": [".yaml", ".yml"],
      "keywords": ["AWSTemplateFormatVersion"],
      "match": "contains"
    },
    "ansible": {
      "files": ["ansible.cfg"],
      "keywords": ["hosts:", "tasks:"],
      "match": "contains"
    },
    "pulumi": {
      "files": ["Pulumi.yaml"],
      "keywords": ["pulumi"],
      "match": "contains"
    }
  }
}
